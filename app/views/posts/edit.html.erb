<h1>
    Edit Post
</h1>

<%= form_with model: @post, html: {class: "form-container"} do |f|  %>
    <div class="form-input"> <%= f.label :title %><%= f.text_field :title%></div>
    <div class="form-input"> <%= f.label :content %><%= f.text_field :content%></div>
    <div class="button-container"><%= f.submit "update", class: "link-button" %></div>
<% end %>